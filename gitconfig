[user]
	email = olixem@gmail.com
	name = Olgierd \"Allgreed\" Kasprowicz

[core]
	editor = vim
	pager = less

	excludesfile = /home/allgreed/.gitignore_global

	autocrlf = input

    untrackedCache = true

[fetch]
	prune = true

[push]
    default = simple
    followTags = false

[commit]
    verbose = true # Show diff when preparing commit message

# 3rd party
############################

[hub]
	protocol = ssh

# Diffs
############################

[diff]
    renames = copies
	algorithm = patience

[diff "bin"]
    textconv = hexdump -v -C

# UI
############################

[alias]
    s = status --short
    d = diff
    p = push
    a = add
    c = commit

    aa = add --all
    ca = !git add --all && git commit
    co = checkout
    purge-branches = !git branch --merged >/tmp/merged-branches && vi /tmp/merged-branches && xargs git branch -d </tmp/merged-branches

[color "status"]
    added = green 
    changed = blue
    untracked = red

[color "diff"]
    meta = yellow bold
    frag = magenta bold # line info
    old = red
    new = green

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = cyan

