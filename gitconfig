[user]
	email = olixem@gmail.com
	name = Olgierd \"Allgreed\" Kasprowicz

[core]
	editor = vim
	pager = less

	excludesfile = /home/allgreed/.gitignore_global

	autocrlf = input

    untrackedCache = true

[fetch]
	prune = true

[push]
    default = simple
    followTags = false

[hub]
	protocol = ssh

[diff]
    renames = copies

[diff "bin"]
    textconv = hexdump -v -C

# UI
############################

[alias]
    s = status -s
    d = diff
    p = push
    a = add
    c = commit -v

    aa = add --all
    ca = !git add --all && git commit -v
    co = checkout

    deltag = "!r() { git tag -d $1 && git push origin :refs/tags/$1 }; r" # Remove tag (also on origin)

[color "diff"]
    meta = yellow bold
    frag = magenta bold # line info
    old = red
    new = green

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = cyan
