#!/usr/bin/env python3
import typer
import random

def main(
    name_only: bool = typer.Option(False, "--name", "--name-only", "-n"),
    set_female: bool = typer.Option(False, "--female", "-f"),
):
    if set_female:
        name_pool = FEMALE_NAMES
        surname_pool = FEMALE_SURNAMES
    else:
        name_pool = MALE_NAMES
        surname_pool = MALE_SURNAMES

    result = random.choice(name_pool).title()

    if not name_only:
        result += " "
        result += random.choice(surname_pool).title()
    print(result)

